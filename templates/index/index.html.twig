{% extends 'base.html.twig' %}

{% block title %}Welcome{% endblock %}
{% block body %}

<div class="mx-3 mt-2 row">
{% block topRated %}
      <div class="toprated ml-3 col-8 border d-inline-block ">
        <div class="row  mt-3 ">
          <h4 class=" col-5">Top Rated Movies:</h4>
          <a href="{{path('top_rated',{'page':1})}}" class="offset-5 "><button type="button" class="btn btn-info ">More...</button></a>
        </div>
          <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner mx-auto" style="width:50%">
              <div class="carousel-item active ">
                <img class="d-block w-100" src="http://image.tmdb.org/t/p/w342{{tops[0].poster_path}}" alt="poster_{{tops[0].title}}">
                <div class="carousel-caption d-none d-md-block">
                  <h3>{{tops[0].title}}</h3>
                  <h4>Rated:{{tops[0].vote_average}}</h4>
                </div>
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" src="http://image.tmdb.org/t/p/w342{{tops[1].poster_path}}" alt="poster_{{tops[1].title}}">
                <div class="carousel-caption d-none d-md-block">
                  <h3>{{tops[1].title}}</h3>
                  <h4>Rated:{{tops[1].vote_average}}</h4>
                </div>
              </div>
              <div class="carousel-item ">
                <img class="d-block w-100" src="http://image.tmdb.org/t/p/w342{{tops[2].poster_path}}" alt="poster_{{tops[2].title}}">
                <div class="carousel-caption d-none d-md-block">
                  <h3>{{tops[2].title}}</h3>
                  <h4>Rated:{{tops[2].vote_average}}</h4>
                </div>
              </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
          </div>
{% endblock %}

<div class="rightSideBar col-3 mx-auto border border-dark d-inline-block text-center">
  <h4>POPULAR MOVIES:</h4>

  {% block rightSideBar %}
  <ol>
      {% for popular in populars %}
        <li>   <a href="{{path('movie_detail',{'id':popular.id})}}">{{popular.title}}</a> </li>
    {% endfor %}
    </ol>
</div>
{% endblock %}

</div>

{% endblock %}
