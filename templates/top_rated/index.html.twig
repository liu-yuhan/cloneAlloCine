{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container">
  <div class="title text-center">
      <h1> POPULAR MOVIES </h1>
  </div>
  <div class="row my-3">
    {% for top in tops %}
    <div class="my-3 col-4 ">
        <a href="{{path('movie_detail',{'id':top.id})}}">
            <img src="http://image.tmdb.org/t/p/w342{{top.poster_path}}" alt="poster_{{top.title}}">
                <p class="d-block ">{{top.title}}</p>
            <h5> {{top.vote_average}}</h5>
          </a>
            </div>
      {% endfor %}
      <div class="mx-auto my-auto">
          <a href="{{path('top_rated',{'page':page +1 })}}"> <h3>NEXT PAGE</h3> </a>
      </div>

  </div>

</div>




{% endblock %}
