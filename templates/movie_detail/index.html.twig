{% extends 'base.html.twig' %}

{% block title %}Your movie details{% endblock %}

{% block body %}
<div id="movie">
<div class="container my-3 ">
  <div class="moviesDetail">
      <h1 class="mx-auto text-center">{{movie.title}}</h1>
      <div class="row ">
        <div class="col-5 offset-1">
          <img src="http://image.tmdb.org/t/p/w342{{movie.poster_path}}" alt="poster{{movie.id}}">
        </div>
        <div class="text py-3 col-6 border">
          <div class="row">
            <h5 class="col-3">Popularity</h5>
            <h4 class="col-9">{{movie.popularity}}</h4>
          </div>

          <div class="row">
              <h5 class="col-3 "> Overview<br>   </h5>
                  <p class="col-9">
                  {{movie.overview}}
                  </p>

          </div>
          <div class="row">
              <h5 class="col-5 ">Production compagny<br> </h5>
                  <p class="col-5">
                      {% for company in movie.production_companies %}
                          {{company.name}} <br>
                      {% endfor %}
                    </p>
          </div>
          <div class="row">
              <h5 class="col-5 ">production country<br></h5>
                  <p class="col-5">
                      {% for country in movie.production_countries %}
                          {{country.name}} <br>
                      {% endfor %}
                    </p>
                </p>
            </div>
        </div>
      </div>
    </div>

  {# <div class="comment my-3 text-center">
        {{ form_start(articleForm) }}
        {{ form_widget(articleForm) }}
        <button type="submit" class="btn btn-primary">Create!</button>
      {{ form_end(articleForm) }}

    </div>
#}
</div>
</div>
{% endblock %}
